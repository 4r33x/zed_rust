// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "features": {
    "edit_prediction_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_weight": 400.0,

  "file_finder": {
    "file_icons": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "button": true,
    "dock": "right",
    "default_width": 400,
    "status_style": "icon",
    "fallback_branch_name": "main",
    "sort_by_path": false,
    "collapse_untracked_diff": false,
    "scrollbar": {
      "show": null
    }
  },

  "search": {
    "button": false,
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false,
    "center_on_match": true
  },

  "colorize_brackets": true,
  "hover_popover_delay": 200,
  "fast_scroll_sensitivity": 5.0,
  "buffer_line_height": {
    "custom": 1.5
  },
  "use_system_prompts": false,
  "use_system_path_prompts": false,
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Dracula For Rust"
  },
  "ui_font_family": "Maple Mono NF",
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "ui_font_size": 16.0,
  "buffer_font_size": 14.0,

  "scroll_sensitivity": 4.0,
  ///
  "project_panel": {
    "button": false,
    "entry_spacing": "standard",
    "default_width": 400.0,
    "dock": "right",
    "show_diagnostics": "all",
    "file_icons": false, // Show/hide file icons
    "folder_icons": true, // Show/hide folder icons
    "git_status": true, // Indicate new/updated files"
    "sort_mode": "mixed"
  },
  "inlay_hints": {
    "enabled": true
  },

  "terminal": {
    "alternate_scroll": "off",
    "blinking": "on",
    "copy_on_select": true,
    "keep_selection_on_copy": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "line_height": "comfortable",
    "minimum_contrast": 45,
    "option_as_meta": false,
    "button": true,
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": []
      }
    },
    "toolbar": {
      "breadcrumbs": false
    },
    "working_directory": "current_project_directory",
    "scrollbar": {
      "show": null
    }
  },

  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "tabs": {
    "git_status": true, // Color to show git status
    "close_position": "right", // Close button position (left, right, hidden)
    "show_close_button": "hover", // Close button shown (hover, always, hidden)
    "file_icons": true, // Icon showing file type
    // Show diagnostics in file icon (off, errors, all). Requires file_icons=true
    "show_diagnostics": "all"
  }
}
